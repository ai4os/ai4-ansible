## hosts file example for IFCA admins to deploy federated cluster from scratch


#######################################################
####### MODIFY THIS GROUPS TO ADD THE NODES ###########
#######################################################

# ----- Consul
[consul_master]
##### Use just one consul server
<server_name> ansible_host=<server_public_IP>

[consul_clients]
<client1_name> ansible_host=<client1_IP>
  ...
<clientN_name> ansible_host=<clientN_IP>


# ----- Traefik
[traefik_master]
<traefik_name>


# ----- Nomad
[nomad_master]
<server_name> nomad_dc=<nomad_dc_name>

[nomad_cpu_clients]
<cpu_client1_name> nomad_dc=<nomad_dc_name> domain=<domain> nomad_namespaces=<namespace1,namespace2>
  ...
<cpu_clientN_name> nomad_dc=<nomad_dc_name> domain=<domain> nomad_namespaces=<namespace1,namespace2>

[nomad_gpu_clients]
<gpu_client1_name> nomad_dc=<nomad_dc_name> domain=<domain> nomad_namespaces=<namespace1,namespace2>
  ...
<gpu_clientN_name> nomad_dc=<nomad_dc_name> domain=<domain> nomad_namespaces=<namespace1,namespace2>

[nomad_tryme_clients]
<tryme_client1_name>
  ...
<tryme_clientN_name>

# ---- Volume-docker
[nomad_volume]
<nomad_client1_name> vol_name=<vol_name> partition_name=<partition_name>
  ...
<nomad_clientN_name> vol_name=<vol_name> partition_name=<partition_name>


# ---- Monitoring scripts
[monitoring]
<server_name>








#########################################
####### DO NOT MODIFY THIS GROUPS #######
#########################################

[consul_servers:children]
consul_master

[consul:children]
consul_clients
consul_servers

[nomad_servers:children]
nomad_master

[nomad_clients:children]
nomad_cpu_clients
nomad_gpu_clients

[nomad:children]
nomad_clients
nomad_servers
